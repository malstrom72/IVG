FORMAT IVG-1 requires:IMPD-1
BOUNDS 0,0,800,600

reset
options aa-gamma:1.0
offset 300,300
scale 1.0,1.0
//scale 1
//shear 0.5,0.2
wipe silver;
wipe pattern:[ bounds -2,-2,20,20; pen black width:1.0; rect 0.5,0.5,20,20 ]
r=20
r={$r+1}
rotate $r
n=0
mask [ wipe pattern:[ bounds $n,$n,100,100; ellipse {$n+50},{$n+50},40 ] ]
wipe gradient:[ linear -100,-100,200,200 stops:0.0,white,1.0,blue ];
//fill gradient:[ linear -100,-100,200,200 stops:0.0,white,1.0,none ];
//scale 0.2
// ellipse 0,0,100
rect -100,-100,200,200
